# ====================
# Telegram Bot Settings
# ====================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Уникальный идентификатор бота (необязательно, для внутренних целей)
TELEGRAM_BOT_ID_USER=your_bot_id

# Токен Telegram-бота (получается через @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# API ID и API HASH Telegram (для работы с Hydrogram)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Часовой пояс (по умолчанию Europe/Moscow)
TIME_ZONE=Europe/Moscow

# Список ID администраторов (через запятую)
TELEGRAM_ADMIN_IDS=123456789,987654321

# Ссылка на разработчика (например, Telegram)
DEVELOPER_URL=https://t.me/yourusername 

# ID Telegram-канала и группы (если используются)
TELEGRAM_CHANNEL_ID=@your_channel
TELEGRAM_CHANNEL_U=your_channel_url
TELEGRAM_GROUP_CHAT_ID=-1001234567890

# ====================
# Database Settings
# ====================
# URI базы данных (по умолчанию SQLite)
DB_URI=sqlite+aiosqlite:///./bot.db

# ====================
# OpenAI Settings
# ====================
# API ключ OpenAI
OPENAI_API_KEY=your_openai_api_key

# URL API OpenAI (по умолчанию стандартный)
OPENAI_API_URL=https://api.openai.com/v1/chat/completions 

# Модель OpenAI (например, gpt-4o-mini)
OPENAI_GPT_MODEL=gpt-4o-mini

# Максимальное количество токенов (по умолчанию 4096)
OPENAI_MAX_TOKEN_COUNT=4096

# ====================
# Yandex Settings
# ====================
# Folder ID в Yandex Cloud
YANDEX_FOLDER_ID=your_yandex_folder_id

# Модель Yandex GPT (по умолчанию yandexgpt/latest)
YANDEX_GPT_MODEL=yandexgpt/latest

# URL API Yandex GPT
YANDEX_GPT_API_URL=https://llm.api.cloud.yandex.net/foundationModels/v1/completion 

# API ключ Yandex GPT
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key

# Модель Yandex Art (по умолчанию yandex-art/latest)
YANDEX_ART_MODEL=yandex-art/latest

# URL API Yandex Art
YANDEX_ART_API_URL=https://llm.api.cloud.yandex.net/foundationModels/v1/imageGenerationAsync 

# API ключ Yandex Art
YANDEX_ART_API_KEY=your_yandex_art_api_key